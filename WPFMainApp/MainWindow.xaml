<Window x:Class="WPFMainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMainApp"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="ToolWindow" ResizeMode="NoResize" Width="0" Height="0"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto" MinHeight="0"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Name="LinkTextBox"
            HorizontalAlignment="Left"
            TextWrapping="Wrap"
            Text="TextBox"
            VerticalAlignment="Top"
        />
        <StackPanel Name="ButtonsStackPanel"
            Grid.Row="1"
            Height="Auto"
            Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top"
            />
    </Grid>
</Window>
